{
	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	},
	"yaml.format.enable": true,
	"suggest.autoTrigger": "none",
	"languageserver": {
		"golang": {
			"command": "gopls",
			"rootPatterns": [
				"go.mod"
			],
			"filetypes": [
				"go"
			]
		},
		"bash": {
			"command": "bash-language-server",
			"args": [
				"start"
			],
			"filetypes": [
				"sh"
			],
			"ignoredRootPaths": [
				"~"
			]
		},
		"dockerfile": {
			"command": "docker-langserver",
			"filetypes": [
				"dockerfile"
			],
			"args": [
				"--stdio"
			]
		}
	}
}
